:root {
}

#PauseRoot {
    transition-property: translate;
    transition-duration: 0.25s;
    transition-timing-function: ease-out;
}

.hidden {
    translate: 0 -1500px;
}

.visible {
    translate: 0 0;
}

Button {
    background-color: rgba(73, 73, 73, 0);
    background-image: url("project://database/Assets/UI%20Toolkit/button_style.png?fileID=2800000&guid=8ec9704096d212245a95447862c3f4ef&type=3#button_style");
    width: 250px;
    height: 70px;
}

Slider {
    background-image: none;
}
